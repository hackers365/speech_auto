{
  "manifest_version": 2,

  "name": "语音home automation",
  "description": "speech to text send to home automation gateway",
  "version": "1.0",

  "permissions": [
    "https://auto.hackers365.com",
    "notifications",
    "background",
    "storage",
    "webRequest"
  ],
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "options_page": "options.html",

  "background": {
    "page": "autovoice.html"
  }

}